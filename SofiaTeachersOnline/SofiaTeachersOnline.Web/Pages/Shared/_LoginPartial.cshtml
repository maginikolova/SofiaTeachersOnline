@*@using Microsoft.AspNetCore.Identity*@
@using SofiaTeachersOnline.Database.Models

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
@*@inject SignInManager<IdentityUser> SignInManager
    @inject UserManager<IdentityUser> UserManager*@

@if (SignInManager.IsSignedIn(User))
{
    <li class="has-submenu">
        <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name</a>
        <ul class="sub-menu">
            <li><a href="#section2">Моите Курсове</a></li>
            <li><a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Настройки</a></li>
            <li>
                @*TODO: Fix the Logout button*@
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="nav-link btn btn-link text-white">Изход</button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <li class="nav-item">
        <a asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
    </li>
    <li class="nav-item">
        <a asp-area="Identity" asp-page="/Account/Login">Вход</a>
    </li>
}


